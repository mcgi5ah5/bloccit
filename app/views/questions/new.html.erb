<h1>New Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for questions</p>
      <ul>
        <li>Don't be offensive</li>
        <li>Consider everybody's opinion</li>
        <li>Get to your point in as few words as possible</li>
      </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder:'Enter Question name' %>
      </div>
      <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows:3, class: 'form-control', placeholder:'Enter Question body' %>
      </div>
      <div class="form-group">
         <%= f.label :resolved %>
         <%= f.check_box :resolved , class: 'checkbox-inline' %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>





